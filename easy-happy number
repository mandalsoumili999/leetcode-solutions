class Solution {
public:
    bool isHappy(int n) {
        if(n<=0) return false;
        while(n!=1){
            int sum=0;
            while(n>0){
                int d=n%10;
                n=n/10;
                sum+=d*d;
            }n=sum;
            if (n == 4)       // ðŸ”§ FIX 2: stop infinite loop
                return false;
        }return n==1;
    }
};
